<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <ImageView
            android:id="@+id/character_image1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:background="@color/colorWhite"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/character_image2"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/colorWhite"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/character_image3"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:background="@color/colorWhite"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/character_label1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Emiya Shirou"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/character_label2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Saber"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/character_label3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Tohsaka Rin"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/character_role1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="Protagonist"
            android:textSize="12dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/character_role2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="Main character"
            android:textSize="12dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/character_role3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="Makes an appearance"
            android:textSize="12dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See All Characters"
        android:textAlignment="center"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:minWidth="70dp"
        android:minHeight="30dp"
        style="?android:attr/borderlessButtonStyle"/>
</LinearLayout>