<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
    android:id="@+id/rating">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Fate / Stay Night ~Unlimited Blade Works~"
            android:id="@+id/quickstats_title"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Type Moon Interactive"
            android:textStyle="italic"
            android:textSize="15dp"
            android:id="@+id/quickstats_developer"
            android:layout_below="@+id/quickstats_title"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Vote Count"
            android:id="@+id/quickstats_votes_label"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="11000000"
            android:paddingRight="5dp"
            android:id="@+id/quickstats_votes"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popularity"
            android:paddingLeft="5dp"
            android:id="@+id/quickstats_popularity_label"
            android:layout_above="@+id/quickstats_votes_label"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.0%"
            android:paddingRight="5dp"
            android:id="@+id/quickstats_popularity"
            android:layout_above="@+id/quickstats_votes"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Length"
            android:id="@+id/quickstats_length_label"
            android:layout_above="@+id/quickstats_popularity_label"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="Very Long (> 50 hours)"
            android:id="@+id/quickstats_length"
            android:layout_above="@+id/quickstats_popularity"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Rating"
            android:id="@+id/quickstats_rating_label"
            android:layout_above="@+id/quickstats_length_label"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="8.21 (very good)"
            android:id="@+id/quickstats_rating"
            android:layout_alignTop="@+id/quickstats_rating_label"
            android:layout_alignParentEnd="true" />



</RelativeLayout>