<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_layout">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/cont_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="125dp"
                android:layout_height="180dp"
                android:transitionName="profile"/>

            <TextView
                android:id="@+id/card_item_title"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingTop="5dp"
                android:paddingLeft="16dp"
                android:text="#8 - White Album 2 ~Closing Chapter~"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/picture"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/rating_text"
                android:text="8.72 (very good)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                android:layout_above="@+id/length_text"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/length_text" />

            <TextView
                android:id="@+id/length_text"
                android:text="Very long (> 50 hours)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingLeft="16dp"
                android:paddingBottom="5dp"
                android:layout_alignBottom="@+id/picture"
                android:layout_alignStart="@+id/card_item_title" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>