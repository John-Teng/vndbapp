<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_layout">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/cont_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/im_item_icon"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:background="@color/colorPrimary"
                android:padding="36dp"
                android:src="@null"
                android:tint="#FFFFFF"/>

            <TextView
                android:id="@+id/lbl_item_sub_title"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:text="#8 - Fate/Stay Night Unlimited Blade Works"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/im_item_icon"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/lbl_rating_text"
                android:text="8.72 (very good)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_item_sub_title"
                android:layout_toEndOf="@+id/im_item_icon"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:paddingLeft="16dp" />

            <TextView
                android:id="@+id/lbl_length_text"
                android:text="Very long (> 50 hours)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_rating_text"
                android:layout_toEndOf="@+id/im_item_icon"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:paddingLeft="16dp" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>